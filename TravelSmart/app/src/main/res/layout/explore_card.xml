<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">


        <ImageView
            android:id="@+id/img_product"
            android:layout_width="74dp"
            android:layout_height="55dp"
            android:background="@drawable/bg_trans_c"
            android:scaleType="fitCenter"
            android:src="@drawable/explore_img" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Mount Albrus"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10sp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:background="@drawable/btn_explore"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="Explore"
            android:textAllCaps="false" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_place"
            android:drawablePadding="5dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Lahore"
            android:textColor="@color/location_text"
            android:textSize="14sp"
            android:layout_marginLeft="86sp"
            android:layout_marginTop="30sp"/>




    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>