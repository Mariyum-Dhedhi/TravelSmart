<resources>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/manrope</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomNavigationView.Active" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="BottomNavigationView.Inactive" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>